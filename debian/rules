%:
	dh --buildsystem=scons_chromeos $@

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

override_dh_auto_build:
	dh_auto_build -- wm screenshot

override_dh_auto_install:
	cp $(CURDIR)/wm $(CURDIR)/debian/chromeos-wm/usr/bin/chromeos-wm
